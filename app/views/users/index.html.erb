<div style=" padding-top: 65px">
<!--<h1><%= t('data') %></h1>-->
  <% var_add_user=t('users.index.add_user') %>
  <% var_id=t 'users.index.id' %>
  <% var_name= t 'users.index.name' %>
  <% var_show= t 'users.index.show' %>
  <% var_update= t 'users.index.update' %>
  <% var_delete= t 'users.index.delete' %>
  <strong> <%= button_to var_add_user, new_user_path, method: "get", class:"button-add"%></strong>
</div>
<h1> <%= t('users.index.list_text')  %></h1>

<% @user.each do |user| %>
  <div class="card">
      <div class="container">
  <p>
    <strong><%= var_id%></strong>

   <b><%= user.id %></b>

  </p>
<p>
  <strong><%= var_name%></strong>

  <%= user.name %>
</p>

      </div>
    <div style="display:inline-block;">
      <%= button_to var_show, user_path(user.id), method: "get", class: "button", style:"display:inline-block;" %>
    </div>
    <% user.email  %>
    <div style="display:inline-block;">
  <%= button_to var_update, edit_user_path(user.id), method: "get", class: "button", style:"display:inline-block;" %>
    </div>
    <div style="display:inline-block;">
  <%= button_to var_delete, user_path(user.id), method: :delete, data: {confirm: t('users.index.confirm_message', name: user.name) }, class: "button" %>
    </div>


  <br><br>
  </div>
<%end %>
